<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/tempback"
    android:verticalScrollbarPosition="left"
    tools:context="com.cs307.evant.evant.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/eventHost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|top"
            android:ems="10"
            android:gravity="center"
            android:selectAllOnFocus="false"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="2"
            android:singleLine="false"
            android:text="Event Host"
            android:textAlignment="center"
            android:textColor="#000"
            android:textSize="38sp" />



        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="200dp"
            android:layout_height="141dp"
            android:layout_gravity="center"
            android:gravity="center"
            app:srcCompat="@drawable/tmap" />

        <TextView
            android:id="@+id/ratingVal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.3"
            android:shadowRadius="2"
            android:text="Host Rating"
            android:textColor="#000"
            android:textSize="20sp" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>
